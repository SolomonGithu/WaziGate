pipeline {
  agent any
  environment {
    WAZIGATE_TAG = 'nightly'
    DOCKER_USERNAME = 'waziupiot' 
    DOCKER_PASS     = credentials('dockerhub')
  }
  stages {
    stage('Prepare') {
      steps {
        catchError(buildResult: 'SUCCESS', stageResult: 'SUCCESS') {
            sh 'docker buildx create --name rpibuilder --platform linux/arm/v7; true'
        }
        sh 'docker buildx use rpibuilder'
        sh 'docker buildx inspect --bootstrap'
        echo $DOCKER_PASS
        sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASS'
      }
    }
    stage('Build') {
      steps {
        dir("wazigate-edge") {
          sh 'docker buildx build --platform=linux/arm/v7 --tag waziup/wazigate-edge:$WAZIGATE_TAG --load --progress plain .'
        }
        dir("apps/waziup/wazigate-system") {
          sh 'docker buildx build --platform=linux/arm/v7 --tag waziup/wazigate-edge:$WAZIGATE_TAG --load --progress plain .'
        }
      }
    }
    stage('Export') {
      steps {
        sh 'docker image save waziup/wazigate-edge -o wazigate-edge.tar'
      }
    }
 
  }
  post {
    success {
      archiveArtifacts artifacts: 'wazigate-edge.tar', fingerprint: true
    }
  }
}
