pipeline {
  agent any
  stages {
    stage('Prepare') {
      steps {
        sh 'docker buildx create --name rpibuilder --platform linux/arm/v7'
        sh 'docker buildx use rpibuilder'
        sh 'docker buildx inspect --bootstrap'

        sh 'git clone https://github.com/Waziup/wazigate-edge'
        sh 'cd wazigate-edge'
      }
    }
    stage('Build') {
      steps {
        sh 'docker buildx build --platform=linux/arm/v7 --tag waziup/wazigate-edge ---load .'
      }
    }
    stage('Export') {
      steps {
        sh 'docker image save waziup/wazigate-edge -o wazigate-edge.tar'
      }
    }
 
  }
  post {
    always {
      junit 'tests/results.xml'
    }
  }
}
