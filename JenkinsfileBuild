pipeline {
  agent any
  stages {
    stage('Prepare') {
      steps {
        catchError {
            sh 'docker buildx create --name rpibuilder --platform linux/arm/v7; true'
        }
        sh 'docker buildx use rpibuilder'
        sh 'docker buildx inspect --bootstrap'
      }
    }
    stage('Build') {
      steps {
        dir("wazigate-edge") {
          sh 'docker buildx build --platform=linux/arm/v7 --tag waziup/wazigate-edge --load --progress plain .'
        }
      }
    }
    stage('Export') {
      steps {
        sh 'docker image save waziup/wazigate-edge -o wazigate-edge.tar'
      }
    }
 
  }
  post {
    always {
      junit 'tests/results.xml'
    }
  }
}
